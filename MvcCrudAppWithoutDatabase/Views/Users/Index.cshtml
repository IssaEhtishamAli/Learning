@model List<Users>
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-md-center">Users Record</h2>
<div class="row justify-content-center ">
    <div class="col-md-8">
        <p>
            <a asp-action="Create" class="btn btn-outline-success">Create new user</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Users item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {  id=item.Id},  new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("X", "Delete", new {  id=item.Id  },new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
